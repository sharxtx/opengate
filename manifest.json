{
    "manifest_version": 3,
    "name": "OpenGate",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "*://*.medium.com/*"
    ],
    "action": {
        "default_title": "Freedium",
        "default_popup": "popup/popup.html",
        "default_icon": {
            "128": "icon.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.medium.com/*"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "icons": {
        "128": "icon.png"
    }
}